<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.gorilabrothers.calculator.MainActivity"
    android:background="#de161616">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:gravity="right|center_vertical"
            android:text="@string/button_0"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingRight="20dp"
            android:background="@drawable/field"
            android:textSize="18sp" />

        <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDelete"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:background="@drawable/button_delete"
            android:textColor="@drawable/text_button_delete"
            android:textSize="18sp" />

        <Button
            android:text="@string/button_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:contentDescription="@string/button_7"
            android:textColor="@drawable/text_button_all"
            android:background="@drawable/button_all"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text="@string/button_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:contentDescription="@string/button_8"
            android:textColor="@drawable/text_button_all"
            android:background="@drawable/button_all"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text="@string/button_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:contentDescription="@string/button_9"
            android:textColor="@drawable/text_button_all"
            android:background="@drawable/button_all"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDivide"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:background="@drawable/button_grey_light"
            android:textColor="@drawable/text_button_grey_lignt"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text="@string/button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:contentDescription="@string/button_4"
            android:textColor="@drawable/text_button_all"
            android:background="@drawable/button_all"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text="@string/button_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:contentDescription="@string/button_5"
            android:textColor="@drawable/text_button_all"
            android:background="@drawable/button_all"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text="@string/button_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:contentDescription="@string/button_6"
            android:textColor="@drawable/text_button_all"
            android:background="@drawable/button_all"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text="x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMultime"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:background="@drawable/button_grey_light"
            android:textColor="@drawable/text_button_grey_lignt"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text="@string/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:contentDescription="@string/button_1"
            android:textColor="@drawable/text_button_all"
            android:background="@drawable/button_all"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text="@string/button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:contentDescription="@string/button_2"
            android:textColor="@drawable/text_button_all"
            android:background="@drawable/button_all"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text="@string/button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:contentDescription="@string/button_3"
            android:textColor="@drawable/text_button_all"
            android:background="@drawable/button_all"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMinus"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:background="@drawable/button_grey_light"
            android:textColor="@drawable/text_button_grey_lignt"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text=","
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPoint"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:textColor="@drawable/text_button_all"
            android:background="@drawable/button_all"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text="@string/button_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:contentDescription="@string/button_0"
            android:textColor="@drawable/text_button_all"
            android:background="@drawable/button_all"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEquals"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:background="@drawable/button_equals"
            android:textColor="@drawable/text_button_equals"
            android:textSize="18sp"
            android:onClick="onButtonClick" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlus"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_gravity="top|bottom|left|right"
            android:minWidth="60dp"
            android:minHeight="80dp"
            android:background="@drawable/button_grey_light"
            android:textColor="@drawable/text_button_grey_lignt"
            android:textSize="18sp"
            android:onClick="onButtonClick" />
    </GridLayout>
</RelativeLayout>
